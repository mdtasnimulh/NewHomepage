<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guestUserBottomSheetJobsRvLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="0dp"
    android:elevation="0dp"
    android:background="@color/white"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/guestUserBottomSheetJobsArrowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/guestUserBottomSheetJobTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guestUserBottomSheetJobTitle" />

        <TextView
            android:id="@+id/guestUserBottomSheetJobTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@color/white"
            android:text="Deputy Head of Retail Business Divison"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guestUserBottomSheetJobsArrowIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFE2F8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/guestUserBottomSheetJobTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
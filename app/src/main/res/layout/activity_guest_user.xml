<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestUserActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/guestUserSignInButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingVertical="7dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:background="@drawable/guuest_user_sign_btn_bg"
        app:backgroundTint="#3167A8"
        app:icon="@drawable/ic_bdjobs_logo_guest_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guestUserCountLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guestUserSignInButton">

        <androidx.cardview.widget.CardView
            android:id="@+id/guestUserLiveJobsCountCV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guestUserLiveJobsCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/guest_user_count_bg"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/guestUserLiveJobsCountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4,662"
                    android:textColor="#3167A8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Live Jobs"
                    android:textColor="#3167A8"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/guestUserLiveJobsCountNumber"
                    app:layout_constraintStart_toStartOf="@+id/guestUserLiveJobsCountNumber"
                    app:layout_constraintTop_toBottomOf="@+id/guestUserLiveJobsCountNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/guestUserCompaniesCountCV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guestUserCompaniesCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/guest_user_count_bg"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/guestUserCompaniesCountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="362"
                    android:textColor="#3167A8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Companies"
                    android:textColor="#3167A8"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/guestUserCompaniesCountNumber"
                    app:layout_constraintStart_toStartOf="@+id/guestUserCompaniesCountNumber"
                    app:layout_constraintTop_toBottomOf="@+id/guestUserCompaniesCountNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/guestUserNewJobsCountCV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guestUserNewJobsCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/guest_user_count_bg"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/guestUserNewJobsCountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4,662"
                    android:textColor="#3167A8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="New Jobs"
                    android:textColor="#3167A8"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/guestUserNewJobsCountNumber"
                    app:layout_constraintStart_toStartOf="@+id/guestUserNewJobsCountNumber"
                    app:layout_constraintTop_toBottomOf="@+id/guestUserNewJobsCountNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guestUserCountLL">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/guestUserSearchJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Search Jobs"
                android:textColor="#595959"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/guestUserSearchKeywordET"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/guest_user_edit_text_bg"
                android:hint="Search with your keyword"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:textColor="#99595959"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guestUserSearchImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestUserSearchJobTitle" />

            <ImageView
                android:id="@+id/guestUserSearchImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/guest_user_search_keyword_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="9.5dp"
                android:src="@drawable/ic_search_guest_user"
                app:layout_constraintBottom_toBottomOf="@+id/guestUserSearchKeywordET"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guestUserSearchKeywordET" />

            <LinearLayout
                android:id="@+id/guestUserEditTextLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestUserSearchKeywordET">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/guestUserSearchCategoryET"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/guest_user_edit_text_bg_full"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableTint="#595959"
                    android:hint="Search category"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:textColor="#99595959"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/guestUserSearchLocationET"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/guest_user_edit_text_bg_full"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableTint="#595959"
                    android:hint="Search location"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:textColor="#99595959"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/guestUnderlineView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#26595959"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestUserEditTextLL" />

            <TextView
                android:id="@+id/guestUserHotJobsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Hot Jobs"
                android:textColor="#595959"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestUnderlineView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/guestUserHotJobsRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:barrierMargin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestUserHotJobsTitle"
                tools:itemCount="4"
                tools:listitem="@layout/guest_user_hot_jobs_rv_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
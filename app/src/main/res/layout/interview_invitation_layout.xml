        android:layout_height="wrap_content"
        android:background="#80F8F5F5"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/interviewInvitationRvAdapterIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_live_interview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/interviewInvitationRvAdapterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="You have a Live Interview Invitation"
            android:textColor="#595959"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/interviewInvitationRvAdapterIcon"
            app:layout_constraintStart_toEndOf="@+id/interviewInvitationRvAdapterIcon"
            app:layout_constraintTop_toTopOf="@+id/interviewInvitationRvAdapterIcon" />

